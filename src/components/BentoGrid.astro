---
// Bento Grid showcasing the three core pillars
import LabCard from './LabCard.astro';

const pillars = [
  {
    title: 'Post-Quantum Cryptography',
    description: 'Securing data against the quantum threat with lattice-based encryption, hash-based signatures, and math-heavy cryptographic schemes designed to withstand quantum computational attacks.',
    icon: 'pqc' as const,
    status: 'LATTICE_SECURE',
    tags: ['CRYSTALS-Kyber', 'SPHINCS+', 'Lattice-Based', 'NIST PQC'],
    metrics: [
      { label: 'KEY_SIZE', value: '1568B' },
      { label: 'SECURITY_LEVEL', value: '256-bit' },
    ],
  },
  {
    title: 'eBPF Observability',
    description: 'Deep-dive observability and sandboxing within the Linux Kernel. Real-time packet capture, syscall tracing, and performance monitoring without kernel modifications.',
    icon: 'ebpf' as const,
    status: 'KERNEL_HOOKED',
    tags: ['XDP', 'TC', 'Tracing', 'Sandboxing', 'Performance'],
    metrics: [
      { label: 'LATENCY', value: '<1μs' },
      { label: 'OVERHEAD', value: '0.1%' },
    ],
  },
  {
    title: 'AI/ML Systems',
    description: 'Intelligent systems engineered for performance and scale. From neural pathway optimization to automated inference pipelines built for production workloads.',
    icon: 'ai' as const,
    status: 'MODEL_INFERENCE',
    tags: ['Neural Networks', 'MLOps', 'Edge AI', 'Optimization'],
    metrics: [
      { label: 'THROUGHPUT', value: '10K/s' },
      { label: 'ACCURACY', value: '99.7%' },
    ],
  },
];
---

<section class="relative py-24 overflow-hidden" id="pillars">
  <!-- Section background -->
  <div class="absolute inset-0 cyber-grid opacity-30"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 mb-6 rounded-full border border-obsidian-purple/30 bg-obsidian-purple/5">
        <span class="w-2 h-2 rounded-full bg-obsidian-purple animate-pulse"></span>
        <span class="mono-label text-obsidian-purple">TECH_PILLARS: 3</span>
      </div>
      
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4">
        Core Research <span class="gradient-text">Domains</span>
      </h2>
      
      <p class="text-gray-400 max-w-2xl mx-auto text-lg">
        Three interconnected pillars of system-level engineering, each designed for the demands of next-generation infrastructure.
      </p>
    </div>
    
    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- PQC Card - Large -->
      <div class="md:col-span-2 lg:col-span-1 lg:row-span-2">
        <LabCard 
          title={pillars[0].title}
          description={pillars[0].description}
          icon={pillars[0].icon}
          status={pillars[0].status}
          tags={pillars[0].tags}
          metrics={pillars[0].metrics}
          className="h-full"
        />
      </div>
      
      <!-- eBPF Card -->
      <div class="lg:col-span-2">
        <div class="relative rounded-xl border border-electric-cyan/30 bg-deep-space-light/50 backdrop-blur-sm p-6 hover:border-electric-cyan/60 transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,240,255,0.15)] card-hover h-full">
          <!-- Corner accents -->
          <div class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-electric-cyan/30 rounded-tl-xl opacity-50"></div>
          <div class="absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 border-electric-cyan/30 rounded-br-xl opacity-50"></div>
          
          <div class="flex flex-col lg:flex-row gap-6">
            <!-- Content -->
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-12 h-12 rounded-lg bg-electric-cyan/10 flex items-center justify-center">
                  <svg class="w-6 h-6 text-electric-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-white">{pillars[1].title}</h3>
                  <span class="mono-label text-electric-cyan">{pillars[1].status}</span>
                </div>
              </div>
              
              <p class="text-gray-400 text-sm leading-relaxed mb-4">
                {pillars[1].description}
              </p>
              
              <div class="flex flex-wrap gap-2">
                {pillars[1].tags.map((tag) => (
                  <span class="px-2 py-1 rounded text-[10px] font-mono uppercase tracking-wider bg-white/5 text-gray-400 border border-white/10">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
            
            <!-- Data stream visualization -->
            <div class="lg:w-64 h-32 lg:h-auto rounded-lg bg-deep-space border border-electric-cyan/20 overflow-hidden relative">
              <div class="absolute inset-0 flex flex-col font-mono text-[10px] text-electric-cyan/60 leading-tight p-2 animate-data-stream">
                <div>→ sys_enter_read: pid=1234 fd=3</div>
                <div>← sys_exit_read: ret=512 latency=2μs</div>
                <div>→ tcp_v4_rcv: skb=0xffff...</div>
                <div>→ xdp_redirect: ifindex=2</div>
                <div>← kprobe/schedule: next=nginx</div>
                <div>→ tracepoint/sched_switch</div>
                <div>← perf_event: cycles=1.2M</div>
                <div>→ sys_enter_write: fd=7 buf=0x...</div>
                <div>→ sys_enter_read: pid=1234 fd=3</div>
                <div>← sys_exit_read: ret=512 latency=2μs</div>
                <div>→ tcp_v4_rcv: skb=0xffff...</div>
                <div>→ xdp_redirect: ifindex=2</div>
              </div>
              <div class="absolute inset-x-0 top-0 h-8 bg-gradient-to-b from-deep-space to-transparent"></div>
              <div class="absolute inset-x-0 bottom-0 h-8 bg-gradient-to-t from-deep-space to-transparent"></div>
            </div>
          </div>
          
          <!-- Metrics -->
          <div class="grid grid-cols-4 gap-4 mt-6 pt-4 border-t border-white/5">
            {pillars[1].metrics?.map((metric) => (
              <div class="text-center">
                <div class="text-lg font-bold font-mono text-electric-cyan">{metric.value}</div>
                <div class="mono-label text-gray-500 text-[10px]">{metric.label}</div>
              </div>
            ))}
            <div class="text-center">
              <div class="text-lg font-bold font-mono text-electric-cyan">BPF</div>
              <div class="mono-label text-gray-500 text-[10px]">TYPE</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-bold font-mono text-terminal-green">LIVE</div>
              <div class="mono-label text-gray-500 text-[10px]">STATUS</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- AI Card -->
      <div class="lg:col-span-2">
        <LabCard 
          title={pillars[2].title}
          description={pillars[2].description}
          icon={pillars[2].icon}
          status={pillars[2].status}
          tags={pillars[2].tags}
          metrics={pillars[2].metrics}
          className="h-full"
        />
      </div>
    </div>
    
    <!-- Bottom connector line -->
    <div class="flex justify-center mt-12">
      <div class="flex items-center gap-4">
        <div class="w-24 h-px bg-gradient-to-r from-transparent to-electric-cyan/50"></div>
        <div class="w-3 h-3 rounded-full border-2 border-electric-cyan/50 animate-pulse"></div>
        <div class="w-24 h-px bg-gradient-to-l from-transparent to-electric-cyan/50"></div>
      </div>
    </div>
  </div>
</section>
