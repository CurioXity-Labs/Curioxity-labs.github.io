---
// Projects Grid showcasing CurioxityLabs projects
import LabCard from './LabCard.astro';

const projects = [
  {
    title: 'PromptRacer',
    description: 'AI-powered prompt engineering and optimization platform. Race to find the most effective prompts through competitive benchmarking and intelligent iteration.',
    icon: 'ai' as const,
    status: 'AI_RACING',
    tags: ['LLM', 'Prompt Engineering', 'Benchmarking', 'Optimization'],
    metrics: [
      { label: 'PROMPTS_TESTED', value: '10K+' },
      { label: 'AVG_IMPROVEMENT', value: '47%' },
    ],
    featured: true,
  },
  {
    title: '5G Core',
    description: 'Next-generation 5G core network implementation. High-performance, cloud-native architecture designed for edge computing and ultra-low latency applications.',
    icon: 'ebpf' as const,
    status: 'NETWORK_ACTIVE',
    tags: ['5G', 'Telecom', 'Cloud-Native', 'Edge Computing'],
    metrics: [
      { label: 'LATENCY', value: '<5ms' },
      { label: 'THROUGHPUT', value: '10Gbps' },
    ],
    featured: true,
  },
  {
    title: 'Rust eBPF Tools',
    description: 'High-performance eBPF tooling written in Rust. Kernel-level observability, packet processing, and system tracing with memory safety guarantees.',
    icon: 'ebpf' as const,
    status: 'KERNEL_HOOKED',
    tags: ['Rust', 'eBPF', 'Linux Kernel', 'Observability', 'XDP'],
    metrics: [
      { label: 'OVERHEAD', value: '<0.1%' },
      { label: 'PROBES', value: '50+' },
    ],
  },
  {
    title: 'CipherTrace',
    description: 'Cryptographic Bill of Materials (CBOM) generation using eBPF. Real-time detection and inventory of cryptographic operations across your infrastructure.',
    icon: 'pqc' as const,
    status: 'CRYPTO_SCANNING',
    tags: ['CBOM', 'eBPF', 'Cryptography', 'Security Audit', 'Compliance'],
    metrics: [
      { label: 'ALGORITHMS', value: '200+' },
      { label: 'DETECTION', value: 'Real-time' },
    ],
  },
  {
    title: 'PQ Traffic Tester',
    description: 'Post-Quantum cryptography traffic analysis and testing suite. Validate PQC implementations, measure performance impact, and ensure quantum-resistant security.',
    icon: 'pqc' as const,
    status: 'PQ_TESTING',
    tags: ['Post-Quantum', 'CRYSTALS-Kyber', 'TLS 1.3', 'Performance'],
    metrics: [
      { label: 'PQC_SCHEMES', value: '8+' },
      { label: 'TEST_COVERAGE', value: '95%' },
    ],
  },
];
---

<section class="relative py-24 overflow-hidden" id="projects">
  <!-- Section background -->
  <div class="absolute inset-0 cyber-grid opacity-30"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4">
        Our <span class="gradient-text">Projects</span>
      </h2>
      
      <p class="text-gray-400 max-w-2xl mx-auto text-lg">
        Building the tools and infrastructure for the next generation of secure, observable, and intelligent systems.
      </p>
    </div>
    
    <!-- Projects Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- PromptRacer - Featured Large Card -->
      <div class="md:col-span-2 lg:col-span-2">
        <div class="relative rounded-xl border border-terminal-green/30 bg-deep-space-light/50 backdrop-blur-sm p-6 hover:border-terminal-green/60 transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,255,136,0.15)] card-hover h-full">
          <!-- Corner accents -->
          <div class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-terminal-green/30 rounded-tl-xl opacity-50"></div>
          <div class="absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 border-terminal-green/30 rounded-br-xl opacity-50"></div>
          
          <div class="flex flex-col lg:flex-row gap-6">
            <!-- Content -->
            <div class="flex-1">
              <div class="flex items-center gap-3 mb-4">
                <div class="w-12 h-12 rounded-lg bg-terminal-green/10 flex items-center justify-center">
                  <svg class="w-6 h-6 text-terminal-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-white">{projects[0].title}</h3>
                  <span class="mono-label text-terminal-green">{projects[0].status}</span>
                </div>
              </div>
              
              <p class="text-gray-400 text-sm leading-relaxed mb-4">
                {projects[0].description}
              </p>
              
              <div class="flex flex-wrap gap-2">
                {projects[0].tags.map((tag) => (
                  <span class="px-2 py-1 rounded text-[10px] font-mono uppercase tracking-wider bg-white/5 text-gray-400 border border-white/10">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
            
            <!-- Racing visualization -->
            <div class="lg:w-48 h-32 lg:h-auto rounded-lg bg-deep-space border border-terminal-green/20 overflow-hidden relative flex items-center justify-center">
              <div class="text-center">
                <div class="text-4xl font-bold font-mono text-terminal-green animate-pulse">üèéÔ∏è</div>
                <div class="mono-label text-terminal-green/60 mt-2">RACING</div>
              </div>
            </div>
          </div>
          
          <!-- Metrics -->
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 mt-6 pt-4 border-t border-white/5">
            {projects[0].metrics?.map((metric) => (
              <div class="text-center">
                <div class="text-lg font-bold font-mono text-terminal-green">{metric.value}</div>
                <div class="mono-label text-gray-500 text-[10px]">{metric.label}</div>
              </div>
            ))}
            <div class="text-center">
              <div class="text-lg font-bold font-mono text-terminal-green">AI</div>
              <div class="mono-label text-gray-500 text-[10px]">POWERED</div>
            </div>
            <div class="text-center">
              <div class="text-lg font-bold font-mono text-terminal-green">LIVE</div>
              <div class="mono-label text-gray-500 text-[10px]">STATUS</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- 5G Core -->
      <div class="lg:row-span-2">
        <LabCard 
          title={projects[1].title}
          description={projects[1].description}
          icon={projects[1].icon}
          status={projects[1].status}
          tags={projects[1].tags}
          metrics={projects[1].metrics}
          className="h-full"
        />
      </div>
      
      <!-- Rust eBPF Tools -->
      <div>
        <LabCard 
          title={projects[2].title}
          description={projects[2].description}
          icon={projects[2].icon}
          status={projects[2].status}
          tags={projects[2].tags}
          metrics={projects[2].metrics}
          className="h-full"
        />
      </div>
      
      <!-- CipherTrace -->
      <div>
        <LabCard 
          title={projects[3].title}
          description={projects[3].description}
          icon={projects[3].icon}
          status={projects[3].status}
          tags={projects[3].tags}
          metrics={projects[3].metrics}
          className="h-full"
        />
      </div>
      
      <!-- PQ Traffic Tester - Wide card -->
      <div class="md:col-span-2 lg:col-span-3">
        <div class="relative rounded-xl border border-obsidian-purple/30 bg-deep-space-light/50 backdrop-blur-sm p-6 hover:border-obsidian-purple/60 transition-all duration-300 hover:shadow-[0_0_30px_rgba(139,92,246,0.15)] card-hover">
          <!-- Corner accents -->
          <div class="absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 border-obsidian-purple/30 rounded-tl-xl opacity-50"></div>
          <div class="absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 border-obsidian-purple/30 rounded-br-xl opacity-50"></div>
          
          <div class="flex flex-col md:flex-row gap-6 items-center">
            <div class="flex items-center gap-4">
              <div class="w-14 h-14 rounded-lg bg-obsidian-purple/10 flex items-center justify-center">
                <svg class="w-7 h-7 text-obsidian-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-white">{projects[4].title}</h3>
                <span class="mono-label text-obsidian-purple">{projects[4].status}</span>
              </div>
            </div>
            
            <p class="flex-1 text-gray-400 text-sm leading-relaxed">
              {projects[4].description}
            </p>
            
            <div class="flex flex-wrap gap-4">
              {projects[4].metrics?.map((metric) => (
                <div class="text-center px-4">
                  <div class="text-xl font-bold font-mono text-obsidian-purple">{metric.value}</div>
                  <div class="mono-label text-gray-500 text-[10px]">{metric.label}</div>
                </div>
              ))}
            </div>
          </div>
          
          <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-white/5">
            {projects[4].tags.map((tag) => (
              <span class="px-2 py-1 rounded text-[10px] font-mono uppercase tracking-wider bg-white/5 text-gray-400 border border-white/10">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
    
    <!-- Bottom connector line -->
    <div class="flex justify-center mt-12">
      <div class="flex items-center gap-4">
        <div class="w-24 h-px bg-gradient-to-r from-transparent to-electric-cyan/50"></div>
        <div class="w-3 h-3 rounded-full border-2 border-electric-cyan/50 animate-pulse"></div>
        <div class="w-24 h-px bg-gradient-to-l from-transparent to-electric-cyan/50"></div>
      </div>
    </div>
  </div>
</section>
