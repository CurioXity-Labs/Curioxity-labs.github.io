---
// People/Team section component
interface Person {
  name: string;
  role: string;
  bio: string;
  avatar?: string;
  links?: {
    github?: string;
    twitter?: string;
    linkedin?: string;
    website?: string;
  };
  focus: string[];
}

const people: Person[] = [
  {
    name: 'Team Member 1',
    role: 'Co-Founder & Engineer',
    bio: 'Systems engineer focused on kernel-level observability and post-quantum cryptography. Building tools for the next generation of secure infrastructure.',
    focus: ['eBPF', 'Rust', 'PQC', 'Systems'],
    links: {
      github: 'https://github.com/',
    },
  },
  {
    name: 'Team Member 2',
    role: 'Co-Founder & Engineer',
    bio: 'Full-stack engineer passionate about 5G networks, AI systems, and building developer tools that push the boundaries of what\'s possible.',
    focus: ['5G Core', 'AI/ML', 'Infrastructure'],
    links: {
      github: 'https://github.com/',
    },
  },
];
---

<section class="relative py-24 overflow-hidden" id="people">
  <!-- Background -->
  <div class="absolute inset-0 cyber-grid opacity-20"></div>
  <div class="absolute inset-0 bg-gradient-to-b from-deep-space via-transparent to-deep-space"></div>
  
  <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4">
        The <span class="gradient-text">Team</span>
      </h2>
      
      <p class="text-gray-400 max-w-2xl mx-auto text-lg">
        The curious minds behind CurioxityLabs.
      </p>
    </div>
    
    <!-- People grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {people.map((person, index) => (
        <article class="group relative rounded-xl border border-white/10 bg-deep-space-light/50 backdrop-blur-sm p-6 hover:border-electric-cyan/40 transition-all duration-300 hover:shadow-[0_0_30px_rgba(0,240,255,0.1)] card-hover">
          <!-- Corner accents -->
          <div class={`absolute top-0 left-0 w-8 h-8 border-t-2 border-l-2 rounded-tl-xl opacity-50 ${index === 0 ? 'border-electric-cyan/30' : 'border-obsidian-purple/30'}`}></div>
          <div class={`absolute bottom-0 right-0 w-8 h-8 border-b-2 border-r-2 rounded-br-xl opacity-50 ${index === 0 ? 'border-electric-cyan/30' : 'border-obsidian-purple/30'}`}></div>
          
          <div class="flex items-start gap-4">
            <!-- Avatar placeholder -->
            <div class={`w-16 h-16 rounded-lg flex items-center justify-center text-2xl font-bold font-mono ${index === 0 ? 'bg-electric-cyan/10 text-electric-cyan' : 'bg-obsidian-purple/10 text-obsidian-purple'}`}>
              {person.name.split(' ').map(n => n[0]).join('')}
            </div>
            
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-1">
                <h3 class="text-lg font-semibold text-white group-hover:text-electric-cyan transition-colors">
                  {person.name}
                </h3>
              </div>
              
              <span class={`mono-label text-xs ${index === 0 ? 'text-electric-cyan' : 'text-obsidian-purple'}`}>
                {person.role.toUpperCase().replace(/ /g, '_')}
              </span>
            </div>
          </div>
          
          <p class="text-gray-400 text-sm leading-relaxed mt-4">
            {person.bio}
          </p>
          
          <!-- Focus areas -->
          <div class="flex flex-wrap gap-2 mt-4">
            {person.focus.map((area) => (
              <span class="px-2 py-1 rounded text-[10px] font-mono uppercase tracking-wider bg-white/5 text-gray-400 border border-white/10">
                {area}
              </span>
            ))}
          </div>
          
          <!-- Links -->
          {person.links && (
            <div class="flex items-center gap-3 mt-4 pt-4 border-t border-white/5">
              {person.links.github && (
                <a 
                  href={person.links.github} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-500 hover:text-white transition-colors"
                  aria-label="GitHub"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                  </svg>
                </a>
              )}
              {person.links.twitter && (
                <a 
                  href={person.links.twitter} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-500 hover:text-white transition-colors"
                  aria-label="Twitter"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                  </svg>
                </a>
              )}
              {person.links.linkedin && (
                <a 
                  href={person.links.linkedin} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-500 hover:text-white transition-colors"
                  aria-label="LinkedIn"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                </a>
              )}
              {person.links.website && (
                <a 
                  href={person.links.website} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-gray-500 hover:text-white transition-colors"
                  aria-label="Website"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                </a>
              )}
            </div>
          )}
        </article>
      ))}
    </div>
    
    <!-- Bottom connector -->
    <div class="flex justify-center mt-12">
      <div class="flex items-center gap-4">
        <div class="w-24 h-px bg-gradient-to-r from-transparent to-obsidian-purple/50"></div>
        <div class="w-3 h-3 rounded-full border-2 border-obsidian-purple/50 animate-pulse"></div>
        <div class="w-24 h-px bg-gradient-to-l from-transparent to-obsidian-purple/50"></div>
      </div>
    </div>
  </div>
</section>
