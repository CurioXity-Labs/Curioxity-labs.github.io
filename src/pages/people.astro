---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';

const title = 'People | CurioxityLabs';
const description = 'Meet the team behind CurioxityLabs - the curious minds building the future of secure, observable systems.';

interface Person {
  name: string;
  role: string;
  bio: string;
  avatar?: string;
  links?: {
    github?: string;
    twitter?: string;
    linkedin?: string;
    website?: string;
  };
  focus: string[];
  projects: string[];
}

const people: Person[] = [
  {
    name: 'Team Member 1',
    role: 'Co-Founder & Engineer',
    bio: 'Systems engineer focused on kernel-level observability and post-quantum cryptography. Building tools for the next generation of secure infrastructure. Passionate about Rust, eBPF, and pushing the boundaries of what\'s possible at the kernel level.',
    focus: ['eBPF', 'Rust', 'Post-Quantum Cryptography', 'Systems Programming'],
    projects: ['Rust eBPF Tools', 'CipherTrace', 'PQ Traffic Tester'],
    links: {
      github: 'https://github.com/',
    },
  },
  {
    name: 'Team Member 2',
    role: 'Co-Founder & Engineer',
    bio: 'Full-stack engineer passionate about 5G networks, AI systems, and building developer tools that push the boundaries of what\'s possible. Focused on cloud-native architectures and intelligent automation.',
    focus: ['5G Core', 'AI/ML', 'Cloud Infrastructure', 'Developer Tools'],
    projects: ['5G Core', 'PromptRacer'],
    links: {
      github: 'https://github.com/',
    },
  },
];
---

<BaseLayout title={title} description={description}>
  <Navigation />
  
  <main class="pt-24">
    <!-- Hero -->
    <section class="relative py-16 overflow-hidden">
      <div class="absolute inset-0 cyber-grid opacity-20"></div>
      
      <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-white mb-6">
          The <span class="gradient-text">Team</span>
        </h1>
        
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          The curious minds behind CurioxityLabs, building tools for the next generation of infrastructure.
        </p>
      </div>
    </section>
    
    <!-- People -->
    <section class="relative py-16">
      <div class="absolute inset-0 lattice-bg opacity-10"></div>
      
      <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-12">
          {people.map((person, index) => (
            <article class="group relative rounded-2xl border border-white/10 bg-deep-space-light/50 backdrop-blur-sm p-8 hover:border-electric-cyan/30 transition-all duration-300">
              <!-- Corner accents -->
              <div class={`absolute top-0 left-0 w-12 h-12 border-t-2 border-l-2 rounded-tl-2xl opacity-50 ${index === 0 ? 'border-electric-cyan/30' : 'border-obsidian-purple/30'}`}></div>
              <div class={`absolute bottom-0 right-0 w-12 h-12 border-b-2 border-r-2 rounded-br-2xl opacity-50 ${index === 0 ? 'border-electric-cyan/30' : 'border-obsidian-purple/30'}`}></div>
              
              <div class="flex flex-col md:flex-row gap-8">
                <!-- Avatar -->
                <div class="flex-shrink-0">
                  <div class={`w-32 h-32 rounded-xl flex items-center justify-center text-4xl font-bold font-mono ${index === 0 ? 'bg-electric-cyan/10 text-electric-cyan' : 'bg-obsidian-purple/10 text-obsidian-purple'}`}>
                    {person.name.split(' ').map(n => n[0]).join('')}
                  </div>
                </div>
                
                <!-- Content -->
                <div class="flex-1">
                  <div class="flex flex-wrap items-center gap-3 mb-2">
                    <h2 class="text-2xl font-bold text-white">
                      {person.name}
                    </h2>
                  </div>
                  
                  <div class={`mono-label mb-4 ${index === 0 ? 'text-electric-cyan' : 'text-obsidian-purple'}`}>
                    {person.role.toUpperCase().replace(/ /g, '_')}
                  </div>
                  
                  <p class="text-gray-400 leading-relaxed mb-6">
                    {person.bio}
                  </p>
                  
                  <!-- Focus Areas -->
                  <div class="mb-6">
                    <h3 class="mono-label text-gray-500 mb-2">FOCUS_AREAS</h3>
                    <div class="flex flex-wrap gap-2">
                      {person.focus.map((area) => (
                        <span class={`px-3 py-1.5 rounded-lg text-xs font-mono uppercase tracking-wider border ${index === 0 ? 'bg-electric-cyan/5 text-electric-cyan border-electric-cyan/20' : 'bg-obsidian-purple/5 text-obsidian-purple border-obsidian-purple/20'}`}>
                          {area}
                        </span>
                      ))}
                    </div>
                  </div>
                  
                  <!-- Projects -->
                  <div class="mb-6">
                    <h3 class="mono-label text-gray-500 mb-2">ACTIVE_PROJECTS</h3>
                    <div class="flex flex-wrap gap-2">
                      {person.projects.map((project) => (
                        <span class="px-3 py-1.5 rounded-lg text-xs font-medium bg-white/5 text-white border border-white/10">
                          {project}
                        </span>
                      ))}
                    </div>
                  </div>
                  
                  <!-- Links -->
                  {person.links && (
                    <div class="flex items-center gap-4 pt-4 border-t border-white/5">
                      <span class="mono-label text-gray-500">CONNECT:</span>
                      {person.links.github && (
                        <a 
                          href={person.links.github} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
                        >
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                          </svg>
                          <span class="text-sm">GitHub</span>
                        </a>
                      )}
                      {person.links.twitter && (
                        <a 
                          href={person.links.twitter} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
                        >
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                          </svg>
                          <span class="text-sm">Twitter</span>
                        </a>
                      )}
                      {person.links.linkedin && (
                        <a 
                          href={person.links.linkedin} 
                          target="_blank" 
                          rel="noopener noreferrer"
                          class="flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
                        >
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                          </svg>
                          <span class="text-sm">LinkedIn</span>
                        </a>
                      )}
                    </div>
                  )}
                </div>
              </div>
            </article>
          ))}
        </div>
        
        <!-- Join CTA -->
        <div class="mt-16 text-center">
          <div class="inline-block rounded-xl border border-white/10 bg-deep-space-light/50 backdrop-blur-sm p-8">
            <h3 class="text-xl font-semibold text-white mb-2">Interested in collaborating?</h3>
            <p class="text-gray-400 mb-4">We're always looking for curious minds.</p>
            <a 
              href="https://github.com/CurioXity-Labs" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-gradient-to-r from-electric-cyan to-obsidian-purple text-white font-semibold hover:shadow-[0_0_30px_rgba(0,240,255,0.4)] transition-all duration-300"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
              </svg>
              Check Out Our Projects
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
